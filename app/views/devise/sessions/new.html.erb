<div class="form-wrapper" style="background-image: url(<%= image_path "sky.jpg" %>)"></div>
<div class="index-cloud-pal">
  <div class="inform-pal">
    <%= image_tag "form.png" %>
    <div class="bubble" id = "bubble-index">
      <p>Login to access your challenges</p>
    </div>
  </div>
<div class="form-container">
  <div class="form-image" style="background-image: url(<%= image_path "trees.jpg" %>)">
  </div>
  <div class="form">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn-primary", id: "log-in-btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>

  </div>
  </div>
