<h1><%= @challenge.name %></h1>

<%= cl_image_tag @challenge.photo, height: 300, width: 400, crop: :fill %>

<%= image_tag @article.photo.url(:bright_face) %>

<p><%= link_to "", dashboard_path  %></p>
<%= link_to edit_challenge_path(@challenge) do %>
  Edit
<% end %>

 <%= simple_form_for [@challenge, Tracker.new] do |f| %>
  <%= f.button :submit, "JOIN", class: "btn-primary", id: "btn-booking" %>
<% end %>

<h3>Challenge participants:</h3>
<% @participants.each do |participant| %>
  <p><%= link_to participant.user.name, dashboard_path(user:participant.id) %></p>
  <% end  %>

<div
  id="map"
  style="width: 50%;
  height: 480px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
