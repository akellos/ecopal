<h1>DASHBOARD</h1>

<%= cl_image_tag @user.image, height: 300, width: 400, crop: :fill %>
@user.name



  <div>
    <% if current_user == @user %>
      <h2>Your Challenges:</h2>
      <div class="">
        <% @trackers.each do |tracker| %>
          <div class="">
            tracker.challenge.name
            <% tracker.time.each do |day| %>
            <div class="grey-btn-container">
              <div class="grey-btn"><%= day %></div>
            <% end %>
            </div>
          </div>

        <% end %>
      </div>
    <% else %>
    <% end %>
  </div>


<h1> These are your badges </h1>
<% @badges.each do |badge| %>
<%= badge.title %>
<%= image_tag badge.icon, width: 100, height: 100 %>
<% end %>
<% if policy(@user).edit? %>
  <%= link_to "edit profile", edit_user_registration_path %>
<% end %>


<script>
  const greyButtons = document.querySelectorAll(".grey-btn");
  console.log(greyButtons);

  const changeButtonsOnClick = (event) => {
    console.log(event);
    event.target.classList.toggle("active");
  };

  greyButtons.forEach((el) => {
    el.addEventListener("click", changeButtonsOnClick);
  });
</script>
